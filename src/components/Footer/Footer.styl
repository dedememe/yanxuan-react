.footer_guide  //footer
  top-border-1px(#e4e4e4)
  position fixed
  z-index 100
  left 0
  right 0
  bottom 0
  background-color #fff
  width 100%
  height 1rem
  display flex
  .guide_item
    display flex
    flex 1
    text-align center
    flex-direction column
    align-items center
    margin .1rem
    color #999999
    &.on
      color #02a774
    span
      font-size .24rem
      margin-top .04rem
      margin-bottom .04rem
      .iconfont
        font-size .44rem