.login
  width 100%
  height 13.34rem
  padding-bottom 1rem
  box-sizing border-box
  overflow hidden
  background-color #F2F5F4
  text-align center
  .login-topBar
    width 100%
    height .88rem
    //position relative
    line-height .88rem
    z-index 100
    border-bottom 1px solid #ddd
    background-color #fff
    position fixed
    top 0
    .topBar-left
      margin-left .3rem
      position absolute
      left 0
      text-decoration none
      color #7e8c8d
      i
        font-size .56rem
    .topBar-middle
      display inline-block
      height .86rem
      img
        display inline-block
        width 1.72rem
        height .54rem
        line-height .86rem
        margin-top .16rem
    .topBar-right
      text-decoration none
      display inline-block
      position absolute
      right .3rem
      a
        font-size .7rem
        text-decoration none
        color #7e8c8d
        i
          font-size .56rem
  .logoWrap
    box-sizing borderbox
    margin-top .88rem
    width 100%
    height .9rem
    text-align center
    padding 1.5997rem 0
    img
      width 2.6796rem
      height .9rem
      line-height 4.0994rem
  .login-phone
    width 6.7rem
    height .94rem
    color #fff
    background-color #b4282d
    text-align center
    margin-left .4rem
    border 1px solid #b4282d
    box-sizing border-box
    border-radius .1rem
    line-height .94rem
    font-size .28rem
    margin-bottom .3rem
  .login-mailbox
    width 6.7rem
    height .94rem
    color #fff
    background-color #fff
    text-align center
    margin-left .4rem
    border-radius .1rem
    line-height .94rem
    font-size .28rem
    background transparent
    color #b4282d
    border 1px solid #b4282d
    box-sizing border-box
    margin-bottom .3rem
  .register
    font-size .28rem