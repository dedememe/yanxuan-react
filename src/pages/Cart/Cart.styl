*
  margin: 0
  padding: 0
  box-sizing border-box
.cart
  width 100%
  height 13.34rem
  background-color #f4f4f4
  .cart-head
    height .88rem
    width 100%
    padding 0 .3rem
    background-color #fff
    .title
      text-align center
      line-height .88rem
      font-size .36rem
    .getCoupon
      text-align right
      color red
      margin-top -.6rem
      font-size .28rem
  .service
    width 100%
    background-color #f4f4f4
    height .7rem
    ul
      display flex
      flex-direction row
      justify-content space-around
      text-align center
      line-height .7rem
      li
        font-size .24rem
        color #666
  .backgroundPic
    background-color #f4f4f4
    width 100%
    height 3rem
    margin-top 3.8rem
    text-align center
    img
      width 2.48rem
      height 2.48rem
    .img-det
      color #999
      font-size .28rem
      margin-top -.2rem
  .cart-button
    width 100%
    margin-top .1rem
    .button
      width 4.8rem
      height .92rem
      background-color #b4282d
      margin-left 1.35rem
      text-align center
      color #fff
      font-size .28rem
      line-height .92rem
      border-radius .1rem